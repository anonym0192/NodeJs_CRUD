                        {{/h.menu}}
                    </ul> 
                </nav>
            </div>
        </header>
            {{#user}}
                <div class="user-info container">
                    <span>Welcome <a href="/users/edit">{{name}}</a>!</span>
                    <span><a href="/users/logout">Logout</a></span>
                </div>
            {{/user}}
        
    